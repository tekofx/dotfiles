font-1 = JetBrainsMono Nerd Font Mono:style=Medium:size=15;3 # Icons
font-2 = Hack Nerd Font Mono:style=Regular:size=20;5 # Separators
font-3 = Hack Nerd Font Mono:style=Regular:size=5;5 # Separators space

# Modules
module-margin=0
modules-center = sep-l bspwm i3 sep-r 
modules-right= sep-l cpu memory sep-r sep-l storage battery sep-r sep-l pulseaudio sep-r sep-l date sep-r

# Hide bar when fullscreen
wm-restack = bspwm

cursor-click = pointer

[bar/left]
width = 40%
height = 30
offset-y = 0.5%
top = true
offset-x=0.5%

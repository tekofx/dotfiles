[module/menu]
type = custom/text
content = %{T5}%{A1:$HOME/.config/eww/profile.sh && $HOME/.config/eww/buttons.sh:}%{A}%{T-}
content-background=${colors.background}
content-padding=0


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false

format-volume = <ramp-volume><label-volume>

format-volume-padding = 0
format-volume-background=${colors.background}

label-volume = "%percentage%%"
label-volume-foreground = ${colors.foreground}
label-volume-padding = 0

ramp-volume-foreground=${colors.foreground}
ramp-volume-0 = "%{T2}奄%{T4} %{T-}"
ramp-volume-1 = "%{T2}奔%{T4} %{T-}"
ramp-volume-2 = "%{T2}墳%{T4} %{T-}"
ramp-volume-padding = 0

format-muted-padding = 0
label-muted = %{T2}婢%{T-}
label-muted-background = ${colors.background}
label-muted-padding = 0

click-right = pavucontrol&

[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>
format-background= ${colors.background}

label-focused = %{T2}%{T-}
label-focused-foreground = ${colors.white}
label-focused-padding = 1 

label-occupied = %{T2}%{T-}
label-occupied-foreground = ${colors.shade-3}
label-occupied-padding = 1 

label-empty = %{T2}%{T-}
label-empty-foreground = ${colors.shade-1}
label-empty-padding = 1
radius-top=10.0
radius-bottom=10.0


[module/date]
type = internal/date
interval = 1

time = "%H:%M"

format = %{A1:$HOME/.config/eww/date_and_time.sh:}<label>%{A}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 0

label = "%{T2}%{T4} %{T-}%time%"
label-padding = 0
padding-right= 0

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACADs
full-at = 98
format-foreground = ${colors.foreground}
format-background = ${colors.background}

# Charging
format-charging = <animation-charging><label-charging>
label-charging = %percentage:2%%
format-charging-padding = 0
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}
animation-charging-0 = "%{T2} %{T4} %{T-}"
animation-charging-1 = "%{T2} %{T4} %{T-}"
animation-charging-2 = "%{T2} %{T4} %{T-}"
animation-charging-3 = "%{T2} %{T4} %{T-}"
animation-charging-4 = "%{T2} %{T4} %{T-}"
; Framerate in milliseconds
animation-charging-framerate = 750

# Discharging
format-discharging = <ramp-capacity><label-discharging>
label-discharging = %percentage%%
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background}
ramp-capacity-0 = "%{T1} %{T4} %{T-}"
ramp-capacity-1 = "%{T1} %{T4} %{T-}"
ramp-capacity-2 = "%{T1} %{T4} %{T-}"
ramp-capacity-3 = "%{T1} %{T4} %{T-}"
ramp-capacity-4 = "%{T1} %{T4} %{T-}"
ramp-capacity-5 = "%{T1} %{T4} %{T-}"
ramp-capacity-6 = "%{T1} %{T4} %{T-}"
ramp-capacity-7 = "%{T1} %{T4} %{T-}"
ramp-capacity-8 = "%{T1} %{T4} %{T-}"
ramp-capacity-0-foreground = ${colors.red}
#ramp-capacity-0-background = ${colors.background}
format-discharging-padding = 0

format-full-prefix = "%{T1} %{T-}"
format-full-foreground = ${colors.foreground}
format-full-background = ${colors.background}
format-full-padding = 0


[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = "%{T2}%{T4} %{T-}%percentage%%"




[module/memory]
type = internal/memory

; Seconds to sleep between updates
; Default: 1
interval = 3
format = <label> 
label = "%{T2} %{T4} %{T-}%percentage_used%%"

label-background=${colors.background}
label-foreground=${colors.foreground}
label-padding=0

[module/storage]
type = internal/fs

; Mountpoints to display
mount-0 = /

format-padding=0

label-mounted= "%{T2}%{T4} %{T-}%percentage_used%%"
label-mounted-background=${colors.background}
label-mounted-foreground=${colors.foreground}
label-mounted-padding=0
; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 4

[settings]
screenchange-reload = true


[module/wlan]
type = internal/network
interface = wlp7s0
interval = 1.0


format-connected = <label-connected>
